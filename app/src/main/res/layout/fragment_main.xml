<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ic_background"
    tools:context="com.tn.demineurmadjoh.fragment.MainFragment"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical|center_horizontal" >

    <Button

        android:textColor="#FFFFFF"
        android:id ="@+id/main__button_new_game_easy"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/main__new_game_easy"
        android:background="@drawable/button_bg_rounded_corners"
        android:padding="15dp"
        android:layout_gravity="center_vertical"

        />
    <Button
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:id ="@+id/main__button_new_game_normal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/main__new_game_normal"
        android:background="@drawable/button_bg_rounded_normal"
        android:padding="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/main__button_new_game_easy"
        />
    <Button
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:id ="@+id/main__button_new_game_difficult"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/main__new_game_difficult"
        android:background="@drawable/button_bg_rounded_difficult"
        android:padding="15dp"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/main__button_new_game_normal"
        />


    </RelativeLayout>

</ScrollView>
